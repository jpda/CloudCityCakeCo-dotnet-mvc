@using CloudCityCakeCo.Models.Enums
@model CloudCityCakeCo.Models.ViewModels.CakeOrderViewModel

@{
    ViewBag.Title = "Update";
    Layout = "_Layout";
}

<h2>Update</h2>

<form asp-controller="Admin" asp-action="Update" method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label">Order Id</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Id" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label">Customer name</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="UserName" readonly>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="OrderDate" class="col-sm-2 col-form-label">Order Date</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="OrderDate" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CompletedDate" class="col-sm-2 col-form-label">Completed Date</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="CompletedDate" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="OrderStatus" class="col-sm-2 col-form-label">Completed Date</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="OrderStatus" asp-items="Html.GetEnumSelectList<OrderStatus>()">
            </select>
        </div>
    </div>
    <hr/>
    <div class="form-group row">
        <label asp-for="Cake.Flavour" class="col-sm-2 col-form-label">Cake Flavour</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Cake.Flavour" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Cake.Frosting" class="col-sm-2 col-form-label">Cake Frosting</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Cake.Frosting" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Cake.Topping" class="col-sm-2 col-form-label">Cake Topping</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Cake.Topping" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Cake.Size" class="col-sm-2 col-form-label">Cake Size</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Cake.Size" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Cake.Price" class="col-sm-2 col-form-label">Cake Price</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Cake.Price" readonly>
        </div>
    </div>
    <button type="submit" class=" btn btn-primary">Save Changes</button>
</form>